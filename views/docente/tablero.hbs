{{> header}}
{{> navbarDocente}}
<style>
    body {
        background-image: linear-gradient(-200deg, rgb(11, 119, 138) 60%, white 60%);
    }
</style>
<section>
    {{!-- titulo --}}
    <section id="titulo">
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <h1 style="color: #FFC312;">Tablero Docente</h1>
                </div>
            </div>
        </div>
    </section>
    {{!-- boton para crear curso --}}
    <section>
        <div class="modal-footer">
            <!--calendario-->
            <a href="#">
                <svg xmlns="http://www.w3.org/2000/svg" width="38" height="38" fill="currentColor"
                    class="bi bi-calendar-week" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#calendario">
                    <path
                        d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-5 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z" />
                    <path
                        d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                </svg>
            </a>
            <!-- ventana calendario-->
            <div class="modal fade bd-example-modal-lg1" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
                aria-hidden="true" id="calendario">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Calendario escolar</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        </div>
                        <div class="modal-body">
                            <iframe
                                src="https://calendar.google.com/calendar/embed?src=5scp7m8q87navcb10ul63p7t14%40group.calendar.google.com&ctz=America%2FMexico_City"
                                style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--selected de periodo-->
            <select class="form-select" aria-label="Default select example" name="cvPeriodo" style="width: 200px;">
                <option id="cbxPeriodo" selected>Seleccionar Periodo</option>
                {{#each periodo}}
                <option value="{{_id}}">Periodo: {{NombrePeriodo}}</option>
                {{/each}}
            </select>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <!--button/icon crear curso-->
            <buttontype="button" class="btn btn-info">
                <a href="crearCurso" class="link" style="color: rgb(0, 0, 0);">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-plus" viewBox="0 0 16 16">
                        <path
                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>Crear Cursos
                </a>
                </button>
        </div>
    </section>
    <br>
    {{!-- Cursos en ejecución --}}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm" id="pen">
                    <div>
                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                            viewBox="0 0 120 120">
                            <circle cx="60" cy="60" r="50" fill="#2FE90A" />
                        </svg>&nbsp;Activos
                    </div>
                    <div>
                        <br>
                        <div class="container">
                            <div class="row">
                                {{#each curso}}
                                {{#if_eq_string this.estado 'activo'}} {{!-- Cambia el estado del curso a inactivo --}}
                                <div class="col-sm">
                                    <div id="curso2"
                                        style="background-color: rgb(199, 199, 199); padding: 20px; width:300px; border-radius: 5px; position: relative;">
                                        {{!-- iconos de la parte superior --}}
                                        <div align="right">
                                            <form style="display:inline">
                                                <button class="btn btn-link" style="display:inline"><svg
                                                        xmlns="http://www.w3.org/2000/svg" width="25" height="25"
                                                        fill="currentColor" class="bi bi-chat-text" viewBox="0 0 16 16">
                                                        <path
                                                            d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
                                                        <path
                                                            d="M4 5.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zM4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8zm0 2.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5z" />
                                                    </svg></button>
                                            </form>
                                            {{!-- Boton de desactivar curso --}}
                                            <form action="/docentes/tableroDocente/edit/{{_id}}" method="POST"
                                                style="display:inline">
                                                <input type="hidden" name="estado" value="inactivo">
                                                <button type="submit" class="btn btn-link">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"
                                                        fill="currentColor" class="bi bi-dash-circle"
                                                        viewBox="0 0 16 16"
                                                        onclick="return confirm('Está seguro de desactivar el curso {{nombre}}. Desaparecera el curso a los alumnos inscritos, ya no podras ver mensajes, rendimiento por participante y sus planeaciones.')">
                                                        <path
                                                            d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                                        <path
                                                            d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" />
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                        {{#each @root.imagen}}
                                        {{#if_eq_string this._id ../this.cvImagen}}
                                        <img src="{{ruta}}" alt="" id="imagenCurso">
                                        {{/if_eq_string}}
                                        {{/each}}
                                        <br><br>
                                        <h5>
                                            <center>{{nombre}}</center>
                                        </h5>
                                        {{#each @root.grupo}}
                                        {{#if_eq_string this._id ../this.cvGrupo}}
                                        <h6>Grupo: {{Semestre}} - {{NombreGrupo}}</h6>
                                        {{/if_eq_string}}
                                        {{/each}}
                                        <details>
                                            <summary>Descripción</summary>
                                            <p class="card-text">{{descripcion}}</p>
                                        </details>
                                        <br>
                                        {{!-- Botones --}}
                                        <div align="center" id="ButonTab">
                                            <p>
                                                <button type="button" class="btn btn-info">
                                                    <a href="/docentes/contenido/{{_id}}" class="link" id="butonTab"
                                                        style="color: rgb(0, 0, 0);">Ver
                                                        Curso</a>
                                                </button>
                                                <button type="button" class="btn btn-warning">
                                                    <a href="#" class="link" id="butonTab"
                                                        style="color: rgb(0, 0, 0);">Rendimiento</a>
                                                </button>
                                            </p>
                                            <p>
                                                <button type="button" class="btn btn-success">
                                                    <a href="/docentes/invitaciones/{{_id}}" class="link" id="butonTab"
                                                        style="color: rgb(0, 0, 0);">Participantes</a>
                                                </button>
                                                <button type="button" class="btn btn-secondary">
                                                    <a href="/docentes/planear/{{_id}}" class="link"
                                                        style="color: rgb(0, 0, 0);">
                                                        Planeaciones</a>
                                                </button>
                                            </p>
                                        </div>
                                        <style>
                                            button {
                                                width: 120px;
                                                height: 35px;
                                            }
                                        </style>


                                        {{!--
                                    </div> --}}
                                </div><br>
                            </div>
                            {{/if_eq_string}}
                            {{/each}}
                        </div><br>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{!-- Termina cursos en ejecución --}}
    {{!-- Inico de cursos desactivados --}}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm" id="pen">
                    <div>
                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                            viewBox="0 0 120 120">
                            <circle cx="60" cy="60" r="50" fill="#F92323" />
                        </svg>&nbsp;Desactivos
                    </div><br>
                    <div>
                        <div class="container">
                            <div class="row">
                                {{#each curso}}
                                {{#if_eq_string this.estado 'inactivo'}} {{!-- Cambia el estado del curso a activo --}}
                                <div class="col-sm">
                                    <div id="curso2"
                                        style="background-color: rgb(199, 199, 199); padding: 20px; width:300px; border-radius: 5px; position: relative;">
                                        <div align="right">
                                            {{!-- Boton de activar curso --}}
                                            <form action="/docentes/tableroDocente/edit/{{_id}}" method="POST">
                                                <input type="hidden" name="estado" value="activo">
                                                <button type="submit" class="btn btn-link">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"
                                                        fill="currentColor" class="bi bi-plus-circle"
                                                        viewBox="0 0 16 16"
                                                        onclick="return confirm('Está seguro de activar nuevamente el curso {{nombre}}. Le aparecera nuevamente el curso a los alumnos inscritos, podrás ver el contenido, los alumnos inscritos, mensajes, rendimiento por participante y sus planeaciones.')">
                                                        <path
                                                            d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                                        <path
                                                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                        {{#each @root.imagen}}
                                        {{#if_eq_string this._id ../this.cvImagen}}
                                        <img src="{{ruta}}" alt="" id="imagenCurso">
                                        {{/if_eq_string}}
                                        {{/each}}
                                        <br><br>
                                        <h5>
                                            <center>{{nombre}}</center>
                                        </h5>
                                        {{#each @root.grupo}}
                                        {{#if_eq_string this._id ../this.cvGrupo}}
                                        <h6>Grupo: {{Semestre}} - {{NombreGrupo}}</h6>
                                        {{/if_eq_string}}
                                        {{/each}}
                                        <details>
                                            <summary>Descripción</summary>
                                            <p class="card-text">{{descripcion}}</p>
                                        </details>
                                        <br>
                                        <div align="center">
                                            <form action="/docentes/tableroDocente/edit/{{_id}}" method="POST">
                                                <input type="hidden" name="estado" value="pendiente">
                                                <button type="button" class="btn btn-primary"><a
                                                        href="/docentes/editarC/{{_id}}" class="link"
                                                        onclick="return confirm('Está seguro de editar el curso {{nombre}}. Su estado pasará de inactivo a pendiente, donde podrá editar, eliminar y agregar nuevos temas, actividades y planeaciones para su nueva publicación.')">Editar
                                                        Curso</a>
                                                </button>
                                            </form>
                                        </div>
                                    </div><br>
                                </div>
                                {{/if_eq_string}}
                                {{/each}}
                            </div><br>
                        </div>
                    </div><br>
                </div>
            </div>
        </div>
    </section>
</section> <br>