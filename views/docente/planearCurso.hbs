{{> header}}
{{> navbarDocente}}
{{!-- Margen para la planeacion --}}
<style>
    #titulo {
        border-block-end: 5px solid #FFC312;
        background-color: rgba(23, 24, 25);
        margin: 1rem;
        padding: 1rem;
        text-align: center;
    }

    body {

        background-image: linear-gradient(-200deg, rgb(11, 119, 138) 60%, white 60%);
    }

    #pla {
        background: rgba(170, 165, 165, 0.103);
        margin-top: 50px;
        height: 0%;
        width: 2000px;
        border: 2px solid black;
    }

    #near {
        width: 180px;
        font-size: 20px;
        margin-top: -25px;
        margin-left: 5px;
        background: rgb(11, 119, 138);
    }
</style>
<section>
    {{!-- titulo --}}
    <section id="titulo">
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <h1 style="color: #FFC312;">Planear curso</h1>
                </div>
            </div>
        </div>
    </section>
    <section>
        {{!-- Elegir los parciales --}}
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <section>
                        <div class="container">
                            <div class="row">
                                <div class="col-sm" id="pla">
                                    <h5 id="near">Nombre del curso</h5>
                                    <select class="form-select form-select-sm" style="width: 250px;"
                                        aria-label=".form-select-sm example">
                                        <option>Seleccionar parcial...</option>
                                        {{#each parcial}}
                                        <option value="{{numeroParcial}}">Parcial {{numeroParcial}}</option>
                                        {{/each}}
                                    </select>
                                    <br>
                                    <h9>Este parcial esta activo del 14 de abril 2021 al 5 de mayo del 2021...</h9>
                                    <br><br>
                                    {{!-- seleccionar tema --}}
                                    <div class="row" id="contenido">
                                        <div class="col-sm">
                                            {{#each tema}}
                                            <div>
                                                <div>
                                                    <a href="/docentes/editarTema/{{_id}}">
                                                        <h2>Tema: {{nombre}}</h2>
                                                    </a>
                                                </div>
                                                <div
                                                    style="border: 2px solid rgba(0, 0, 0, 0.363); background-color: #dbe1e7ef; border-radius: 15px;">
                                                    <div>
                                                        {{!-- Contenido del Tema --}}
                                                        <div class="container">
                                                            <div class="row">
                                                                {{!-- Actividad --}}
                                                                {{#each @root.actividad}}
                                                                {{#if_eq_string this.cvTema ../this._id}}
                                                                <div class="col-sm"
                                                                    style="padding: 20px; position: relative;"
                                                                    text-align="center">
                                                                    <h5>{{tipo}}</h5>
                                                                    <div>
                                                                        {{#if_eq_string this.tipo 'Infografia'}}
                                                                            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor"
                                                                                class="bi bi-file-earmark-text" viewBox="0 0 16 16">
                                                                                <path
                                                                                    d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z" />
                                                                                <path
                                                                                    d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z" />
                                                                            </svg>
                                                                        {{/if_eq_string}}
                                                                        {{#if_eq_string this.tipo 'Practica'}}
                                                                            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor"
                                                                                class="bi bi-file-earmark-text" viewBox="0 0 16 16">
                                                                                <path
                                                                                    d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z" />
                                                                                <path
                                                                                    d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z" />
                                                                            </svg>
                                                                        {{/if_eq_string}}
                                                                        {{#if_eq_string this.tipo 'Video'}}
                                                                            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor"
                                                                            class="bi bi-file-earmark-play" viewBox="0 0 16 16">
                                                                                <path
                                                                                    d="M6 6.883v4.234a.5.5 0 0 0 .757.429l3.528-2.117a.5.5 0 0 0 0-.858L6.757 6.454a.5.5 0 0 0-.757.43z" />
                                                                                <path
                                                                                    d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z" />
                                                                            </svg>
                                                                        {{/if_eq_string}}
                                                                        {{#if_eq_string this.tipo 'Tarjeta'}}
                                                                            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-file-earmark-minus"
                                                                                viewBox="0 0 16 16">
                                                                                <path d="M5.5 9a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5z" />
                                                                                <path
                                                                                    d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z" />
                                                                            </svg>
                                                                        {{/if_eq_string}}
                                                                    </div>
                                                                    <br>
                                                                    {{!-- &nbsp;&nbsp;&nbsp;<button type="button"
                                                                        class="btn btn-info" data-bs-toggle="modal"
                                                                        data-bs-target="#Planear">Agregar</button> --}}
                                                                    <button type="button" class="btn btn-info"><a
                                                                            href="/docentes/editarActividad/{{_id}}">Agregar</a></button>
                                                                    {{!-- Termina Actividad --}}
                                                                </div>
                                                                {{/if_eq_string}}
                                                                {{/each}}
                                                                
                                                                {{!-- Examen --}}
                                                                {{#each @root.examen}}
                                                                {{#if_eq_string cvTema ../this._id}}
                                                                <div class="col-sm"
                                                                    style="padding: 20px; position: relative;"
                                                                    text-align="center">
                                                                    <h5>Examen</h5>
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="100"
                                                                        height="100" fill="currentColor"
                                                                        class="bi bi-journal-text" viewBox="0 0 16 16">
                                                                        <path
                                                                            d="M5 10.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                                                                        <path
                                                                            d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z" />
                                                                        <path
                                                                            d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z" />
                                                                        <br><br>
                                                                        {{!-- &nbsp;&nbsp;&nbsp;<button type="button"
                                                                            class="btn btn-info" data-bs-toggle="modal"
                                                                            data-bs-target="#modalFecha">Agregar</button>
                                                                        --}}
                                                                        <button type="button" class="btn btn-info"><a
                                                                                href="/docentes/editarExamen/{{_id}}">Agregar</a></button>
                                                                </div>
                                                                {{/if_eq_string}}
                                                                {{/each}}
                                                            </div>
                                                            {{!-- Termina Examen --}}
                                                        </div>
                                                    </div>
                                                    {{!-- Termina Contenido Tema --}}
                                                </div><br>
                                            </div>
                                            {{/each}}
                                        </div>

                                        {{!-- Botones --}}
                                    </div>
                                    <br>
                                    <div align="center">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-sm"><br>
                                                    <button type="button" class="btn btn-danger"
                                                        style="width: 250px;">Cancelar</button>
                                                </div><br>
                                                <div class="col-sm"><br>
                                                    <button type="button" class="btn btn-success" style="width: 250px;"
                                                        data-toggle="modal"
                                                        data-target=".bd-example-modal-lg">Publicar</button>
                                                </div>
                                                {{!-- Ventana de alerta --}}
                                                <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog"
                                                    aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel">
                                                                    &nbsp;Confirmación</h5>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <img
                                                                    src="https://img.icons8.com/fluent/48/000000/warning-shield.png" />
                                                                <h3>Confirmar la acción seleccionada</h3>
                                                                <div class="modal-footer">
                                                                    <form action="/docentes/crearCurso/edit/{{curso._id}}" method="POST">
                                                                        <input type="hidden" name="estado" value="activo">
                                                                        <input type="hidden" name="esPlaneado" value="true">
                                                                    <button type="button" class="btn btn-danger"
                                                                        data-dismiss="modal">Cancelar</button>
                                                                    <button type="submit" class="btn btn-primary">Enviar</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <br>
                                            </div>
                                        </div>
                                    </div><br>
                                </div><br>
                                <br>
                            </div>
                        </div>
                    </section>
    </section>
    </div>
</section>
<br>