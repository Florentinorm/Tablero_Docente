<body>
  <section class="Navegacion hero hero-bg d-flex justify-content-center align-items-center">
    <div class="container-fluid">
      <div class="container-fluid">
        <div class="shadow-lg p-0 mb-4 bg-body rounded border border-3 ">
          <h5>Rendimiento por alumno<i class="fas fa-info-circle" tabindex="0" data-bs-toggle="tooltip"
              title="Rendimiento de cada alumno por curso"></i></h5>
        </div>
      </div>
      <!--Navegacion con la leyenda "Rendimiento por alumno"-->
      <!--Selected para los filtros necesarios utilizados en la consulta a la base de datos-->
      <div class="selected container  rounded border border-3 border-success" style="background-color: #dadada;">
       <!-- <form action="/docentes/rendimiento/{{_id}}" method="post">-->
        <div class="row">
          <div align="center" class="col-md-4 boton">
            <h5>Parcial: {{#each curso}} {{#each estudiantes}} {{estudiantes.nombre}} {{/each}} {{/each}} 
              <select id="cbx_parcial" name="cbx_parcial" class="form-select" aria-label=".form-select-lg example">
                <option value="0">Seleccione:</option>
            {{#each Parcial}}
            <option value="{{Parcial._id}}">Parcial {{numeroParcial}}</option>
            {{/each}}
            </select>
           </h5> 
          </div>

         <div align="center" class="col-md-4 boton">
            <h5>Tema:
              <select id="cbx_tema" name="cbx_tema"  class="form-select" aria-label=".form-select-lg example">
                <option value="0">Seleccione:</option>
                {{#each Tema}}
            <option value="{{Tema._id}}">{{nombre}}</option>
            {{/each}}
              </select>
            </h5>
          </div>

          <!--Botón para mostrar el contenido de acuerdo a los filtros seleccionados anteriormente-->
          <div class="botonavance col-md-4">
            <br>
            <div class="d-grid gap-2 col-6 mx-auto">
              <button class="btn btn-success" type="submit"><i class="fas fa-clipboard-list"></i> Mostrar</button>
            </div>
            <br>
          </div>


        </div>
       </form>
      </div>

      <!--Linea-->
      <hr style="width:100%;">

       <!--Muestra el rendimiento de los alumnos-->
      
      <center>
        <div class="rendimiento">
           {{#each Usuario}}
          <div class="cuadros container">
            <div class="row">
              <div class=" col-3">
                <img width="25%" height="50%" class="img rounded-circle" alt="Eniun"
                  style="border-radius: 8px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"
                   src="http://assets.stickpng.com/thumbs/585e4bf3cb11b227491c339a.png">
                  
                <p style="color:#fcf380";>{{nombre}} {{appPaterno}} {{appMaterno}} </p>
                
              </div>
              <div class=" col-4">
                <p class="card-text">
                <p style="color:#c4c2c2";><b style="color:#ffffff";>Correo: </b>{{email}}</p> 
                </p>
                <p class="card-text">
                <p style="color:#c4c2c2";><b style="color:#ffffff";>Especialidad: </b>{{especialidad}}</p> 
                </p>
              </div>
              <div class="barra col-4">
                <p class="card-text">
                <div class="progress">
                  <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar"
                    aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 20%">20%</div>
                </div>
                </p>
              </div>
              <div class="col-1">
                <div class="mensaje" width="50%"><a class="btn btn-light btn-lg" href="/docentes/mensaje/{{_id}}" ><i class="fas fa-comment-dots"></i></a>
                </div>
              </div>
              {{!-- Modal Agregar mensaje --}}
              
                    {{!-- Termina Modal Tema --}}
            </div>
          </div>
          <hr style="width:100%;">
          {{/each}}

          <!--botón para imprimir calificaciones"-->
          <br>
          <div class="d-grid gap-2 col-12 mx-auto">
            <p align="right">
              <a class="btn btn-danger" href=""><i class="fas fa-print"></i> Imprimir</a>
            </p>
          </div>
      </center>
      <br>
      <br>
      <br>
      <br>
    </div>
  </section>
</body>

</html>